// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id @default(uuid())
  name String
  about String
  link String
  by String
  place String
  start_date DateTime
  end_date DateTime
  created_by String // TODO : FOREIGN KEY ON USER
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  attending EventAttending[]
}

model Project {
  id String @id @default(uuid())
  name String 
  about String
  link String
  by String
  created_by String // TODO : FOREIGN KEY ON USER
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  // photo
}

model Suggestion {
  id String @id @default(uuid())
  name String
  summary String
  link String
  type ArticleType
  created_by String // TODO : FOREIGN KEY ON USER
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model EventAttending {
  id String @id @default(uuid())
  event Event @relation(fields: [event_id], references: [id])
  event_id String
  user_name String
  is_attending Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum ArticleType {
  ARTICLE
  VIDEO
}